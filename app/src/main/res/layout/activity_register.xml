<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="asykurkhamid.dropshop.Activity.RegisterActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:text="Register"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:mtf_animationDuration="300"
                app:mtf_backgroundColor="@color/grey_background"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_cardCollapsedHeight="6dp"
                app:mtf_image="@drawable/ic_email">

                <EditText
                    android:id="@+id/etEmailReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etNama"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:mtf_animationDuration="300"
                app:mtf_backgroundColor="@color/grey_background"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_cardCollapsedHeight="6dp"
                app:mtf_image="@drawable/ic_locks">

                <EditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etEmail"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="15dp" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:mtf_animationDuration="300"
                app:mtf_cardCollapsedHeight="6dp"
                app:mtf_backgroundColor="@color/grey_background"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_image="@drawable/ic_person">

                <EditText
                    android:id="@+id/regName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Lengkap"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:mtf_animationDuration="300"
                app:mtf_cardCollapsedHeight="6dp"
                app:mtf_backgroundColor="@color/grey_background"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_image="@drawable/ic_stores">

                <EditText
                    android:id="@+id/regShopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Toko"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:mtf_animationDuration="300"
                app:mtf_cardCollapsedHeight="6dp"
                app:mtf_backgroundColor="@color/grey_background"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_image="@drawable/ic_home">

                <EditText
                    android:id="@+id/regAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Lengkap"
                    android:inputType="textCapSentences"
                    android:textSize="15dp" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:mtf_animationDuration="300"
                app:mtf_cardCollapsedHeight="6dp"
                app:mtf_backgroundColor="@color/grey_background"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_image="@drawable/ic_phone">

                <EditText
                    android:id="@+id/regTelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No. Handphone"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <Button
                android:id="@+id/btnReg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/etPass"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_green"
                android:text="Register"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnReg"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNotMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnReg"
                    android:layout_marginRight="4dp"
                    android:text="Sudah jadi Anggota ?" />

                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnReg"
                    android:layout_marginLeft="4dp"
                    android:text="Login"
                    android:textColor="@color/orange"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
